@model IEnumerable<MyStoryMaker.Models.StoryBlock>

@{
    ViewBag.Title = "Index";
}

@if (ViewBag.collageId != null) { 
<h2>
    <a href="http://localhost:63260/Story/Index/@ViewBag.collageId">@ViewBag.story</a>
</h2>
}
else{
    <h2>@ViewBag.story</h2>
}

<p style="display: inline">
    <div style="display: inline">
        @Html.ActionLink("Create New", "Create")
    </div>
    <div style="display: inline; margin-left:800px; height:5px">
        @Html.ActionLink("Image View", "SingleImgView", new { id = @ViewBag.storyId, clgId = @ViewBag.collageId })
    </div>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.blockCaption)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.blockContent)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.blockCaption)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.blockContent)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
